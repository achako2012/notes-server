{
    "compilerOptions": {
        "module": "esnext",
        "lib": ["ES2019"],
        "typeRoots": ["./src/types.ts"],
        "declaration": true,
        "rootDir": "src",
        "esModuleInterop": true,
        "strict": true,
        "types": ["node"],
        "resolveJsonModule": true,
        "target": "es2017",
        "noImplicitAny": true,
        "moduleResolution": "node",
        "sourceMap": true,
        "outDir": "shared"
    }
}
